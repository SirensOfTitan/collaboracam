extends layout

block content
  div.container.offset
    div.row
      div.offset4.span4
        div.well.well-large.well-white
          form(action='/login', method='POST').no-margin
            fieldset
              legend Sign In
              .control-group
                label(for='username').control-label Username or Email
                .controls
                  input(type='text', name='username', placeholder='Username or Email', required).input-block-level#username
              .control-group
                label(for='password').control-label Password
                .controls
                  input(type='password', name='password', placeholder='Password', required)#password.input-block-level
                input(type='hidden', name='_csrf', value=csrf)
                button(type='submit').btn.btn-large.btn-primary.btn-block Sign In